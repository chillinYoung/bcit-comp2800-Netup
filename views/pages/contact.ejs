<div class="body-contact">
  <!-- main top navigation bar -->
  <%- include('../partials/navigation'); %>

  <figure class="figure-contact-bg">
    <div class="figure-contact-overtext">
      <span>Contact Us</span>
    </div>
  </figure>

  <main class="main-contact">
    <!-- header for pc window -->
    <div class="figure-contact-header">
      <span>Contact Us</span>
    </div>

      <!-- netup contact -->
      <div class="contact-netup">
        <span class="contact-header">Netup</span>
        <ul class="contact-netup-info">
          <li><i class="fa fa-road"></i> 3700 Willingdon Avenue</li>
          <li><i class="fa fa-phone"></i> (555) 555-5555</li>
          <li><i class="fa fa-envelope"></i> netupTestEmail@gmail.com</li>
        </ul>
      </div>


      <!-- Email Us section -->
      <div class="contact-email">
        <span class="contact-header">Email Us</span>

        <form action="send" method="POST">
          <div>
            <label class="form-label-basic">Full Name: *</label>
            <input class="form-input-basic" type="text" name="name" required>
          </div>
          <div>
            <label class="form-label-basic">Company:</label>
            <input class="form-input-basic" type="text" name="company">
          </div>
          <div>
            <label class="form-label-basic">Email Address: *</label>
            <input class="form-input-basic" type="email" name="email" required>
          </div>
          <div>
            <label class="form-label-basic">Phone Number:</label>
            <input class="form-input-basic" type="text" name="phone">
          </div>
          <div>
            <label class="form-label-basic">Message: *</label>
            <textarea class="form-textarea-basic" name="message" rows="5" required></textarea>
          </div>
          <span class="required-fields-text">* Required fields</span>
          <input class="yellow-btn" type="submit" value="Submit">
        </form>
      </div>

  </main>

  <!-- extra images to make side images positioned well (on pc window) -->
  <figure class="figure-contact-bg-left"></figure>
  <figure class="figure-contact-bg-right"></figure>

  <!-- footer including sitemap -->
  <%- include('../partials/sitemap'); %>
</div>
