<header>
  <!-- for notification message such as 'successfully signed out' -->
  <%- include('../partials/messages'); %>

  <!-- main header start from here -->
  <div class="header">
    <div class="mobile-menu">
      <span class="mobile-menu-open-btn" onclick="openMenu()">&#9776;</span>
      <span class="mobile-menu-close-btn" onclick="closeMenu()">&#10005;</span>
    </div>
    <div class="header-title">
      <a href="/">Netup</a>
    </div>

    <div class="header-nav">
      <ul class="main-nav-links">
        <li>
          <span class="main-nav-link">About</span>
